:ruby
  button_styles = 'transition '
  container_actions = 'click@window->dropdown#hide ' \
                      'touchstart@window->dropdown#hide ' \
                      'keydown.up->dropdown#previousItem ' \
                      'keydown.down->dropdown#nextItem ' \
                      'keydown.esc->dropdown#hide'
  container_class = "#{main_nav_class('theme_select', '')} relative"
  menu_styles = 'hidden absolute top-0 -right-20 z-10 flex flex-col bg-main ' \
                'gap-2 p-3 rounded-e text-white font-bold'

%div{ class: container_class,
      data: { action: container_actions, controller: 'dropdown' } }
  %button{ class: "main-nav-link !px-0 #{'!text-white' if container_class.include?('active')}",
           data: { action: 'dropdown#toggle:stop' },
           type: 'button' }
    = image_tag 'themes.svg', class: 'w-8', title: 'Select theme'
  %ul{ class: menu_styles,
       data: { 'dropdown-target': 'menu' } }
    %li
      %button{ class: button_styles,
               data: { action: 'theme#switch',
                       'dropdown-target': 'menuItem',
                       theme: 'base' } }
        VisionUP
    %li
      %button{ class: button_styles,
               data: { action: 'theme#switch',
                       'dropdown-target': 'menuItem',
                       theme: 'org_6969' } }
        Dark
